<!-- basic table -->
<div class="row">
    <div class="col-12">
        <div class="material-card card">
            <div class="card-body">
                <h4 class="card-title">Subscritpions List</h4>

                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped border">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Subscription Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Device</th>
                                <th>Gender</th>
                                <th>Subscription period </th>
                                <th>Subscription Status</th>
                                <th>Price</th>
                                <th>Account Status</th>
                                <th>Subscribed On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%  i = 1; %>
                            <%  list.forEach(function(data){ %>
                            <% if((data.profileOfUser != null) && (data.subscriptionForUser != null) ) { %>
                            <tr>
                                <td><%= i++  %></td>
                                <td>
                                    <% if(data.subscriptionForUser == null) { %>
                                    -
                                    <% } else { %>
                                    <% if(data.subscriptionForUser.subscriptionId == null) { %>
                                    <p>-</p>
                                    <% } else {  %>
                                    <%= data.subscriptionForUser.subscriptionId %>
                                    <% } %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if(data.profileOfUser.name != null) {  %>
                                    <%= data.profileOfUser.name %>

                                    <% }  else{ }%>
                                </td>
                                <td><%= data.email %></td>
                              


                                <td>
                                  <% if(data.subscriptionForUser.loginType == null) {}  else {%>
                                    <%= data.subscriptionForUser.loginType %>
                                  <% } %>
                                </td>
                                <td><%= data.profileOfUser.gender %></td>
                                <td><%= data.subscriptionForUser.subscriptionPeriod %></td>
                                <td><%= data.subscriptionForUser.subscriptionStatus %></td>
                                <td>
                                    <% if(data.subscriptionForUser.price == null){} else { %>
                                        <%= data.subscriptionForUser.price %>
                                    <% } %>   
                                   </td> 
                                <td> <% if(data.statusByadmin == 'Deactivate') {  %>
                                    <p style="color: #b30909;">Banned</p>
                                    <% } else if(data.isVerified == 'Yes') { %>
                                    <p style="color: #1c7905;">Verified</p>
                                    <% } else if(data.isRejected == 1) {%>
                                    <p style="color: #b30909;">Rejected</p>
                                    <% }  else if(data.isVerified == 'No') { %>
                                    <p style="color: #0490bb;">Pending</p>
                                    <% } %>
                                </td>
                                <td><% 
                                    var myTimezone = "America/New_York";
                                    var myDatetimeFormat= "MM-DD-YY  hh:mm:ss a";
                                    var myDatetimeString = moment(data.subscriptionForUser.createdAt).tz(myTimezone).format(myDatetimeFormat); %><%= myDatetimeString %></td>


                                <td>
                                    <span class="tooltip-color">
                                        <a href="/admin/subscriptions/view/<%= data.id %>" id="view"><span
                                                class="fas fa-eye fa-2x" tool-tip-toggle="tooltip-demo"
                                                data-original-title="View Details"></span></a>

                                    </span>
                                </td>
                            </tr>
                            <% } %>
                            <% }) %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Subscription Id</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Device</th>
                                <th>Gender</th>
                                <th>Subscription period </th>
                                <th>Subscription Status</th>
                                <th>Price</th>
                                <th>Account Status</th>
                                <th>Subscribed On</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('[tool-tip-toggle="tooltip-demo"]').tooltip({
            placement: 'bottom'
        });
    });
</script>