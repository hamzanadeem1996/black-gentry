<div class="page-content container-fluid">
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->



    <div class="row">
        <div class="col-12">
            <div class="card card-body">
                <h1 align="center"> Send Message </h1>
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <form action="/admin/users/message/<%- data.id %>" id="sendmessage" method="POST">

                            <div class="form-group">
                                <label for="exampleInputEmail111">Email</label>
                                <input type="text" class="form-control" id="exampleInputEmail111"
                                    value="<%- data.email %>" disabled>
                            </div>
                            <div class="form-group" style="display: none;">
                                <input type="text" class="form-control" id="idofuser" value="<%- data.id %>" disabled>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail12">Name</label>
                                <% if(data.profileOfUser == null) { %>
                                <input name="name" type="email" class="form-control" id="exampleInputEmail12" value="-"
                                    disabled>
                                <% } else { 
                                    if(data.profileOfUser.name == '') {  %>
                                <input name="name" type="email" class="form-control" id="exampleInputEmail12" value="-"
                                    disabled>
                                <%   } else { %>
                                <input name="name" type="email" class="form-control" id="exampleInputEmail12"
                                    value="<%- data.profileOfUser.name %>" disabled>
                                <% } %>
                                <% } %>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail12">Message</label>
                                <textarea name="custommessage" class="form-control" rows="10" required></textarea>
                            </div>

                            <div class="form-group text-center">
                                <div class="col-xs-12 pb-3">
                                    <button class="btn btn-block btn-lg btn-info" name="submit" value="Sign In"
                                        type="submit">SEND MESSAGE</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- row -->

</div>